{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Meet Tchalo</title>{% endblock %}
{% block body %}


    <section class="bridges-interactive-secondary-menu">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-xs-12">
                    <ul class="secondary-navbar">
                        <li>
                            <a href="{{ path('ecogames') }}">EcoGames</a>
                        </li>
                        <li>
                            <a href="{{ path('bbmagazine') }}">Magazines</a>
                        </li>
                        <li>
                            <a href="{{ path('videos') }}">Videos</a>
