    <script>
        $('form').on('keyup change paste', 'input, select, textarea', function(){
            if($('#form_firstName').val() && $('#form_lastName').val() && $('#form_country').val() && $('#form_email').val() && $('#form_comments').val()){
                $('#form_send').css("background-color", "#6FD054");
