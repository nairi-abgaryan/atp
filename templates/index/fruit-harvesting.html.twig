{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Fruit harvesting</title>{% endblock %}

{% block body %}

    <section class="fruit-harvesting secondary-pages-top-content" style="background:url('../uploads/images/{{ top.Image }}') no-repeat; background-size:cover;">
        <div class="container">
            <div class="row center-aligned-row">
                <div class="col-sm-6">
                    {% autoescape %}
                            <h1>{{ top.Title|raw }}</h1>
                    {% endautoescape %}
                </div>
                <div class="col-sm-6 cover-text">
                    {% autoescape %}
                            <p>{{ top.Text|raw }}</p>
                    {% endautoescape %}
                </div>
            </div>
        </div>
    </section>

    <div class="fruit-harvesting-main-content-wrapper">
        <section class="community-second">
            <div class="container">
                <div class="row center-aligned-row">
                    <div class="col-md-6">
                        <img src="../uploads/images/{{ content.Image }}"  alt="">
                    </div>
                    <div class="col-md-6">
                        {% autoescape %}
                                <p>{{ content.Text|raw }}</p>
                        {% endautoescape %}
                    </div>
                </div>
            </div>
        </section>

        <!--Planting Model Section-->


        <section class="fruit-harvest-in-school-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        {% autoescape %}
                                <h4>{{ content.Title|raw }}</h4>
                        {% endautoescape %}
                        <p class="donor-name">donated by Clayton Carlisle</p>
                    </div>
                </div>


                {% for item in slider %}
                <div class="visible-xs">
                    <div class="info-content">
                        {% autoescape %}
                                {{ item.Text|raw }}
                        {% endautoescape %}
                    </div>
                    <div class="mobile-before-after-content">
                        {%  set img = attribute(images, item.id) %}
                        <h6>Before</h6>
                        <img src="../uploads/images/{{ img.0.image }}" />
                        <h6>After</h6>
                        <img src="../uploads/images/{{ img.1.image }}" />
                    </div>
                    <div class="info-content">
                        {% autoescape %}
                                {{ item.Text|raw }}
                        {% endautoescape %}
                    </div>
                    <div class="mobile-before-after-content">
                        <h6>Before</h6>
                        <img src="../uploads/images/{{ img.2.image }}" />
                        <h6>After</h6>
                        <img src="../uploads/images/{{ img.3.image }}" />
                    </div>
                </div>
                {% endfor %}


                {% for item in slider %}
                    {% if item.Position == 'right' %}
                        <div class="before-after-slider-wrapper hidden-xs">
                            <div class="info-content">
                                {% autoescape %}
                                        {{ item.Text|raw }}
                                {% endautoescape %}
                            </div>
                            <div class="before-after-slider">
                                <div class="twentytwenty-container">
                                    <!-- The before image is first -->
                                    {%  set img = attribute(images, item.id) %}
                                    <img src="../uploads/images/{{ img.0.image }}" />
                                    <!-- The after image is last -->
                                    <img src="../uploads/images/{{ img.1.image }}" />
                                </div>
                            </div>
                        </div>
                    {% elseif item.Position == 'left' %}
                        <div class="before-after-slider-wrapper hidden-xs">
                            <div class="before-after-slider">
                                <div class="twentytwenty-container">
                                    {%  set img = attribute(images, item.id) %}
                                    <!-- The before image is first -->
                                    <img src="../uploads/images/{{ img.0.image }}" />
                                    <!-- The after image is last -->
                                    <img src="../uploads/images/{{ img.1.image }}" />
                                </div>
                            </div>
                            <div class="info-content">
                                <h6 class="before-label">BEFORE</h6>
                                <h6 class="after-label">AFTER</h6>
                                {% autoescape %}
                                        {{ item.Text|raw }}
                                {% endautoescape %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                <div class="before-after-labels-wrapper hidden-xs">
                    <div class="second-labels-wrapper">
                        <div class="text-center">
                            <h6 class="before-label">BEFORE</h6>
                        </div>
                        <div class="text-center">
                            <h6 class="after-label">AFTER</h6>
                        </div>
                    </div>
                    <div>

                    </div>
                </div>
            </div>
        </section>

        <section class="analytics-content-wrapper">
            <div class="container">
                <div class="single-analytics-content-wrapper">
                    <div class="single-analytics">
                        <img src="../img/tree-silhouette.svg" alt="">
                        <div>
                            <h5>1,336</h5>
                            <p>TREES PLANTED AT THE SCHOOL</p>
                        </div>
                    </div>
                    <div class="single-analytics">
                        <img src="../img/fields.svg" alt="">
                        <div>
                            <h5>90%</h5>
                            <p>SURVIVAL RATE</p>
                        </div>
                    </div>
                    <div class="single-analytics">
                        <img src="../img/peach.svg" alt="">
                        <div>
                            <h5>2,964 lbs.</h5>
                            <p>FRUIT HARVESTED</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="community-last-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h4>FEATURED CONTENT</h4>
                    </div>
                    <div class="row">

                    </div>
                </div>
                <div class="row">
                    {% for item in bottom %}
                    {% if item.Position == 'first' %}
                    <div class="col-md-6">
                        <div class="first-content" style="background: url('../uploads/images/{{ item.Image }}') no-repeat; background-size: cover; height: 400px;">
                            {% elseif item.Position == 'second' %}
                            <div class="col-md-3">
                                <div class="second-content" style="background: url('../uploads/images/{{ item.Image }}') no-repeat; background-size: cover; height: 400px;">
                                    {% elseif item.Position == 'third' %}
                                    <div class="col-md-3">
                                        <div class="third-content" style="background: url('../uploads/images/{{ item.Image }}') no-repeat; background-size: cover; height: 400px;">
                                            {% endif %}
                                            {% autoescape %}
                                                    <h3>{{ item.Text|raw }}</h3>
                                            {% endautoescape %}
                                            {% if item.LinkType == 'outter' %}
                                                <a href="{{ item.Link }}">
                                                    <button > Donate</button>
                                                </a>
                                            {% elseif item.LinkType == 'inner' %}
                                                <p>{{ item.createdAt.format('d M, Y') }}</p>
                                                <a href="{{ item.Link }}">Read More</a>
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
        </section>
    </div>




    <!--Footer Section-->

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li class="hidden">
                            <a href="#">Glossary</a>
                        </li>

                        <li>
                            <a href="{{ path('contact') }}">Contact Us</a>
                        </li><li>
                            <a href="#">Privacy Policy</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li class="hidden">
                            <a href="#">FAQ</a>
                        </li>
                        <li class="hidden">
                            <a href="#">Terms & Conditions</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"> </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p> <span> Armenia Tree Project </span> <br> 400 West Cummings Park <br> Suite 3900, Woburn, MA 01801 USA <br> 617-926-TREE (8733)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <p class="copyright-text">&copy; Copyright 1994-2019 Armenia Tree Project, a project of Armenian Assembly of America. All Rights Reserved.</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-right  social">
                    <p class="hashtag">#GetRooted</p>
                    <a target="_blank" href="https://www.facebook.com/armeniatree">
                        <img src="../img/facebook-logo.svg" alt="facebook">
                    </a>
                    <a target="_blank" href="https://twitter.com/ArmeniaTree">
                        <img src="../img/twitter-logo.svg" alt="twitter">
                    </a>
                    <a target="_blank" href="https://www.instagram.com/armeniatree/">
                        <img src="../img/instagram-logo.svg" alt="instagram">
                    </a>
                    <a target="_blank" href="https://www.youtube.com/user/ArmeniaTreeProject">
                        <img src="../img/youtube.svg" alt="youtube">
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- jQuery -->
    <script src="{{ asset('js/jquery.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/jquery.event.move.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/jquery.twentytwenty.js') }}"></script>


    <!-- Custom Js Files-->
    <script src="{{ asset('js/main.js') }}"></script>


    <script>
        $(window).load(function(){
            let windowWidth = $(window).width();
            if(windowWidth <= 767) {
                $(".twentytwenty-container").twentytwenty({
                    default_offset_pct: '50%', // How much of the before image is visible when the page loads
                    orientation: 'horizontal', // Orientation of the before and after images ('horizontal' or 'vertical')
                    no_overlay: true, //Do not show the overlay with before and after
                    move_slider_on_hover: false, // Move slider on mouse hover?
                    move_with_handle_only: true, // Allow a user to swipe anywhere on the image to control slider movement.
                    click_to_move: true // Allow a user to click (or tap) anywhere on the image to move the slider to that location.
                });
                let imgWidth = $(".twentytwenty-container img").width()/2;

                // On the container, apply a left offset of 50% (screen center) - minus half image width.
                $(".twentytwenty-container").css({"position":"relative","left":"calc(0% - "+ imgWidth+ "px)"});
            } else {
                $(".twentytwenty-container").twentytwenty({
                    default_offset_pct: 0.38, // How much of the before image is visible when the page loads
                    orientation: 'horizontal', // Orientation of the before and after images ('horizontal' or 'vertical')
                    no_overlay: true, //Do not show the overlay with before and after
                    move_slider_on_hover: false, // Move slider on mouse hover?
                    move_with_handle_only: true, // Allow a user to swipe anywhere on the image to control slider movement.
                    click_to_move: false // Allow a user to click (or tap) anywhere on the image to move the slider to that location.
                });
            }
        });
    </script>

{% endblock %}