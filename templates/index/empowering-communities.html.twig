{% extends 'base.html.twig' %}
{% block title %}<title>Armenia Tree Project - Be An Ambassador</title>{% endblock %}
{% block body %}

    <section class="empowering-communities-top-content secondary-pages-top-content" style="background:url('../uploads/images/{{ top.Image }}') no-repeat; background-size:cover;">
        <div class="container">
            <div class="row center-aligned-row">
                <div class="col-sm-6">
                    {% autoescape %}
                            <h1>{{ top.Title|raw }}</h1>
                    {% endautoescape %}
                </div>
                <div class="col-sm-6 cover-text">
                    {% autoescape %}
                            <p>{{ top.TextTop|raw }}</p>
                    {% endautoescape %}
                </div>
            </div>
        </div>
    </section>

    <div class="empowering-communities-page-content-wrapper">
        <section class="community-second">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 col-xs-12 text-center">
                        {% autoescape %}
                                {{ top.TextBottom|raw }}
                        {% endautoescape %}
                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </div>
        </section>


        <section>
            <div class="container">
                {% for item in content %}
                    {% if item.Position == 'first' %}
                        <div class="empowering-communities-middle-content-wrapper hidden-xs">
                            <div class="first-column-content">
                                <div>
                                    <img class="path-icon hidden-xs" src="../img/top-right-path.svg"  alt="">
                                    <img class="path-icon visible-xs" src="../img/mobile-arrow-path.svg"  alt="">
                                </div>
                                <div class="text-center">
                                    <img  src="../uploads/images/{{ item.Image }}"  alt="">
                                    {% autoescape %}
                                            <h4>{{ item.Title|raw }}</h4>
                                    {% endautoescape %}
                                    {% autoescape %}
                                            <p>{{ item.Text|raw }}</p>
                                    {% endautoescape %}
                                    {#<a href="{{ item.Link|raw }}">#}
                                        {#<button>{% autoescape %}#}
                                                {#{% if lang == 'eng' %}#}
                                                    {#{{ item.LinkTextEng|raw }}#}
                                                {#{% elseif lang == 'arm' %}#}
                                                    {#{{ item.LinkTextArm|raw }}#}
                                                {#{% endif %}#}
                                            {#{% endautoescape %}</button>#}
                                    {#</a>#}
                                </div>
                                <div>
                                    <img class="path-icon hidden-xs" src="../img/bottom-right-path.svg"  alt="">
                                    <img class="path-icon visible-xs" src="../img/mobile-arrow-path.svg"  alt="">
                                </div>
                            </div>
                    {% elseif item.Position == 'second' %}
                        <div class="second-column-content">
                            <div class="text-center">
                                <img  src="../uploads/images/{{ item.Image }}"  alt="">
                                {% autoescape %}
                                        <h4>{{ item.Title|raw }}</h4>
                                {% endautoescape %}
                                {% autoescape %}
                                        <p>{{ item.Text|raw }}</p>
                                {% endautoescape %}
                                <a href="{{ item.Link|raw }}">
                                    <button>{% autoescape %}
                                                {{ item.LinkText|raw }}
                                        {% endautoescape %}
                                    </button>
                                </a>
                            </div>
                    {% elseif item.Position == 'third' %}
                            <div class="text-center">
                                <img  src="../uploads/images/{{ item.Image }}"  alt="">
                                {% autoescape %}
                                        <h4>{{ item.Title|raw }}</h4>
                                {% endautoescape %}
                                {% autoescape %}
                                        <p>{{ item.Text|raw }}</p>
