                                            {#{% if lang == 'eng' %}#}
                                                {#{{ item.LinkTextEng|raw }}#}
                                            {#{% elseif lang == 'arm' %}#}
                                                {#{{ item.LinkTextArm|raw }}#}
                                            {#{% endif %}#}
                                        {#{% endautoescape %}#}
                                    {#</button>#}
                                {#</a>#}
                            </div>
                        </div>
                    {% elseif item.Position == 'fourth' %}
                        <div class="third-column-content">
                            <div>
                                <img  class="path-icon hidden-xs" src="../img/top-left-path.svg"  alt="">
                                <img class="path-icon visible-xs" src="../img/mobile-arrow-path.svg"  alt="">
                            </div>
                            <div class="text-center">
                                <img  src="../uploads/images/{{ item.Image }}"  alt="">
                                {% autoescape %}
                                        <h4>{{ item.Title|raw }}</h4>
                                {% endautoescape %}
                                {% autoescape %}
                                        <p>{{ item.Text|raw }}</p>
                                {% endautoescape %}
                                <a href="{{ item.Link|raw }}">
                                    <button>{% autoescape %}
                                                {{ item.LinkText|raw }}
                                        {% endautoescape %}</button>
                                </a>
                            </div>
                            <div>
                                <img class="path-icon hidden-xs" src="../img/bottom-left-path.svg"  alt="">
                                <img class="path-icon visible-xs" src="../img/mobile-arrow-path.svg"  alt="">
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                {% for item in content %}
                    {% if item.Position == 'first' %}
                    <div class="empowering-communities-middle-content-wrapper visible-xs">
                        <div class="text-center">
                            <img  src="../uploads/images/{{ item.Image }}"  alt="">
                            {% autoescape %}
                                    <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                            {% autoescape %}
                                    <p>{{ item.Text|raw }}</p>
                            {% endautoescape %}
                            {#<a href="{{ item.Link|raw }}">#}
                                {#<button>{% autoescape %}#}
                                        {#{% if lang == 'eng' %}#}
                                            {#{{ item.LinkTextEng|raw }}#}
                                        {#{% elseif lang == 'arm' %}#}
                                            {#{{ item.LinkTextArm|raw }}#}
                                        {#{% endif %}#}
                                    {#{% endautoescape %}</button>#}
                            {#</a>#}
                            <img class="path-icon" src="../img/mobile-arrow-path.svg"  alt="">
                        </div>
                    {% elseif item.Position == 'second' %}
                        <div class="text-center">
                            <img  src="../uploads/images/{{ item.Image }}"  alt="">
                            {% autoescape %}
                                    <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                            {% autoescape %}
                                    <p>{{ item.Text|raw }}</p>
                            {% endautoescape %}
                            <a href="{{ item.Link|raw }}">
                                <button>{% autoescape %}
                                            {{ item.LinkText|raw }}
                                    {% endautoescape %}</button>
                            </a>
                            <img class="path-icon" src="../img/mobile-arrow-path.svg"  alt="">
                        </div>
                    {% elseif item.Position == 'third' %}
                        <div class="text-center">
                            <img  src="../uploads/images/{{ item.Image }}" alt="">
                            {% autoescape %}
                                    <h4>{{ item.Title|raw }}</h4>
                            {% endautoescape %}
                            {% autoescape %}
                                    <p>{{ item.Text|raw }}</p>
                            {% endautoescape %}
                            {#<a href="{{ item.Link|raw }}">#}
                                {#<button>{% autoescape %}{% if lang == 'eng' %}#}
                                        {#{{ item.LinkTextEng|raw }}#}
                                    {#{% elseif lang == 'arm' %}#}
                                        {#{{ item.LinkTextArm|raw }}#}
