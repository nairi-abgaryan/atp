                        </li>
                        <li>
                            <a href="{{ path('treevia') }}">Treevia!</a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-4 col-xs-12 text-right">
                    <a href="{{ path('interactive') }}">
                        <img src="../img/bb-interactive.svg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </section>


    <section class="meet-tchalo-wrapper">
        <div class="container">
            <div class="row center-aligned-row">
                <div class="col-sm-6 col-xs-12">
                    {% autoescape %}
                            <h4>{{ content.Title|raw }}</h4>
                    {% endautoescape %}
                    {% autoescape %}
                            <p>{{ content.Text|raw }}</p>
                    {% endautoescape %}
                    <div class="tchalo-video" style="background: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) ), url('.../img/tchalo-video-bck.png') no-repeat; background-size: cover; height: 260px">
                        <div class="title-and-play-button-wrapper">
                                <h3>Watch Tchalo Video: <br/>
                                    A partnership with ATP <br/>
                                    & The TUMO Center</h3>
                            <a  data-toggle="modal" data-target="#tchalo_forest_video"><img class="play-button" src="../img/play_btn.svg" alt=""></a>
                        </div>
                    </div>
                    <div class="modal fade" id="tchalo_forest_video" tabindex="-1" role="dialog" aria-labelledby="tchalo_forest_video"
                         aria-hidden="true">
                        <div class="modal-dialogg">
                            <div class="modal-contentt">
                                <div class="modal-body">
                                    <button style="color: #ffffff; opacity: 1;" type="button" class="close" data-dismiss="modal"
                                            aria-hidden="true">&times;</button>
                                    <div class="video-container">
                                        <iframe width="560" height="315" src="{{ content.Link }}" frameborder="0"  allowfullscreen></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <img src="../uploads/images/{{ content.Image }}" alt="">
                </div>
            </div>
        </div>
    </section>

    <!--Footer Section-->

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                    <ul>
                        <li class="hidden">
