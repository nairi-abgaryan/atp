        {% if done is defined %}

            <div id="myModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content" style="height: 80px;">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p>Thank you! Your message has been sent.</p>
                        </div>
                    </div>
                </div>
            </div>

        {% endif %}

        <section class="treevia-page-wrapper">
            <div class="container">
                <h4>TREEVIA</h4>
                <p>Watch Tigranâ€™s videos and learn about our enviroment</p>
                <div class="row">
                    {% for item in content %}
                        <div class="col-sm-4 col-xs-12">
                            <div class="treevia-video-one" style="background: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) ), url('../uploads/images/{{ item.Image }}') no-repeat; background-size: cover;">
                                <div class="title-and-play-button-wrapper">
                                    {% autoescape %}
                                            <h3>{{ item.Title|raw }}</h3>
                                    {% endautoescape %}
                                    <a  data-toggle="modal" data-target="#m{{ item.id }}"><img class="play-button" src="../img/play_btn.svg" alt=""></a>
                                </div>
                            </div>
                            <div class="modal fade" id="m{{ item.id }}" tabindex="-1" role="dialog" aria-labelledby="m{{ item.id }}"
                                 aria-hidden="true">
                                <div class="modal-dialogg">
                                    <div class="modal-contentt">
                                        <div class="modal-body">
                                            <button style="color: #ffffff; opacity: 1;" type="button" class="close" data-dismiss="modal"
                                                    aria-hidden="true">&times;</button>
                                            <div class="video-container">
                                                <iframe width="560" height="315" src="{{ item.link }}" frameborder="0"  allowfullscreen></iframe>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="col-sm-4 col-xs-12">

                    </div>
                </div>
                <div class="row form-wrapper">
                    <div class="col-sm-8 col-xs-12">
                        <p>Have a question about the environment? Ask Tigran Today.</p>
                        {{ form_start(form) }}
                        <form action="">
                            <div class="two-inputs-wrapper">
                                <div>
                                    <h6>FIRST NAME *</h6>
                                    {{ form_widget(form.firstName, { 'attr': {'placeholder': 'Your Name'|trans}}) }}
                                    <div style="color: red;">{{ form_errors(form.firstName) }} </div>
                                </div>
                                <div>
                                    <h6>LAST NAME *</h6>
                                    {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Your Last Name'|trans}}) }}
                                    <div style="color: red;">{{ form_errors(form.lastName) }} </div>
                                </div>
                            </div>
                            <div class="two-inputs-wrapper">
                                <div>
                                    <h6>E-MAIL *</h6>
                                    {{ form_widget(form.email, { 'attr': {'placeholder': 'Your E-mail Address'|trans}}) }}
                                    <div style="color: red;">{{ form_errors(form.email) }} </div>
                                </div>
                                <div>
                                    <h6>COUNTRY *</h6>
                                    {{ form_widget(form.country, { 'attr': {'placeholder': 'Country'|trans}}) }}
                                    <select id="country" name ="country">

                                    </select>
                                    <div style="color: red;">{{ form_errors(form.country) }} </div>
                                </div>
                            </div>
                            <h6>WHAT IS YOUR QUESTION? *</h6>
                            {{ form_widget(form.comments, { 'attr': {'placeholder': 'Your Message'|trans}}) }}
                            <div style="color: red;">{{ form_errors(form.comments) }} </div>
                            <div class="text-center">
                                {{ form_widget(form.send, { 'attr': {'label': "Submit!", 'style': "background-color: #777777", 'disabled': 'disabled'}}) }}
                            </div>
                        </form>
                        {{ form_end(form) }}

